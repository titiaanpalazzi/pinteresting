<%= render 'pages/home' unless user_signed_in? %>

<div align="center">Sort by:
<button type="button" class="btn btn-default">
  <%= link_to "Highest rating", :sort => "rating DESC" %>
</button>
<button type="button" class="btn btn-default">
  <%= link_to "Most recent", :sort => "created_at DESC" %>
</button>
<button type="button" class="btn btn-default">
  <%= link_to "Title", :sort => "title" %>
</button>
</div>


<!-- "transitions-enabled" makes the boxes slide over -->
<div id="pins" class="transitions-enabled">
  <!-- The line below allows us to call pin. in stead of @pins -->
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin_path(pin)  %>
      <% if pin.user == current_user %>
        <div class="actions">
          <%= link_to 'Show', pin_path(pin) %>
          <%= link_to 'Edit', edit_pin_path(pin) %>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>